{% extends "base.html.twig" %}
{% block body %}
    {% include "nav/nav.twig" %}
    <div class="container-fluid">
        <form method="POST">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.manufacturer) }}
                {{ form_errors(form.manufacturer) }}
                {{ form_widget(form.manufacturer, {'attr': {class: 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.type) }}
                {{ form_errors(form.type) }}
                {{ form_widget(form.type, {'attr': {class: 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.model) }}
                {{ form_errors(form.model) }}
                {{ form_widget(form.model, {'attr': {class: 'form-control'} }) }}
            </div>
            <a
                class="btn btn-warning"
                href="{{ path('models') }}"
            >
                Cancel
            </a>

            {{ form_widget(form.save, {'attr':{class:'btn btn-primary float-right'}}) }}
            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
