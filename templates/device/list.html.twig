{% extends "base.html.twig" %}
{% block body %}
    {% include "nav/nav.twig" %}
    <div class="container-fluid">
        <div>
            <form method="GET" class="form-inline my-2 my-lg-0">
                <input
                    class="form-control mr-sm-2"
                    type="search"
                    placeholder="Search"
                    aria-label="Search"
                    name="keyWord"
                    value="{{ keyWord }}"
                >
                <button
                    class="btn btn-outline-success my-2 my-sm-0"
                    type="submit"
                >
                    Search
                </button>
            </form>
            <a
                class="btn btn-primary"
                href="{{ path('new_device') }}"
            >
                New Device
            </a>

            <a
                class="btn btn-primary"
                href="{{ path('new_device') }}"
            >
                Upload Excel
            </a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>SN</th>
                    <th>Barcode</th>
                    <th>Rack</th>
                    <th>Band</th>
                    <th>Model</th>
                    <th>PO</th>
                </tr>
            </thead>
            <tbody>
                {% for item in devices %}
                <tr>
                    <td>
                        <a href="
                            {{ path(
                                'edit_device',
                                {'device':item.getId()}
                            ) }}
                        ">
                            {{ item.getName() }}
                        </a>
                    </td>
                    <td> {{ item.getSerialNumber() }} </td>
                    <td> {{ item.getBarcodeNumber() }} </td>
                    <td> {{ item.getRack() }}</td>
                    <td> {{ item.getModel().getManufacturer() }} </td>
                    <td> {{ item.getModel().getModel() }} </td>
                    <td> {{ item.getPo() }} </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
