{% extends "base.html.twig" %}
{% block body %}
    {% include "nav/nav.twig" %}
    <div class="container-fluid">
        <div>
            <a
                class="btn btn-primary"
                href="{{ path('new_part') }}"
            >
                New Part
            </a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Band</th>
                    <th>Model</th>
                    <th>Quantity</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody>
                {% for item in parts %}
                <tr>
                    <td class=""> {{ item.getModel().getManufacturer() }} </td>
                    <td> {{ item.getModel().getModel() }} </td>
                    <td> {{ item.getAmount() }} </td>
                    <td> {{ item.getLocation() }} </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
